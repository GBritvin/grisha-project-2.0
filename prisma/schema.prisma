generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id   Int    @id @default(autoincrement())
  name String
}

model Pokemon {
  id            Int      @id @default(autoincrement())
  name          String
  abilities     String[]
  types         String[]
  sprite        String
  shinySprite   String
  locations     String[]
  learnset      String[]
  stats         Json
  weight        Int
  height        Int
  baseExperience Int
  forms         String[]
  heldItems     String[]
  generation    String
  color         String
  species       String
  experience    Int
  moves         String[]
  characteristics Json
}